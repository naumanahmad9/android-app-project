<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <android.support.v7.widget.SearchView
        android:id="@+id/searchview_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:elevation="10dp"
        android:outlineAmbientShadowColor="@color/colorAccent"
        android:outlineSpotShadowColor="@color/colorAccent"
        app:iconifiedByDefault="false"
        app:queryHint="Search">

    </android.support.v7.widget.SearchView>

    <ScrollView
        android:id="@+id/scrollView_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/searchview_main"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/intro_text_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:text="What can we help you find?"
                android:textSize="24sp" />

            <android.support.v4.widget.NestedScrollView
                android:id="@+id/horizontalScrollView_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/intro_text_main">

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:fillViewport="true"
                    android:scrollbars="none">

                    <RelativeLayout
                        android:id="@+id/LL"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <android.support.v7.widget.CardView
                            android:id="@+id/cv1"
                            android:layout_width="135dp"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="10dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/img1"
                                    android:layout_width="match_parent"
                                    android:layout_height="100dp"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/bedroom_pic" />

                                <TextView
                                    android:id="@+id/txt1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/img1"
                                    android:layout_marginStart="12dp"
                                    android:text="Homes"
                                    android:textSize="20sp"
                                    android:textStyle="bold" />
                            </RelativeLayout>
                        </android.support.v7.widget.CardView>

                        <ImageView
                            android:id="@+id/img2"
                            android:layout_width="135dp"
                            android:layout_height="100dp"
                            android:layout_marginStart="15dp"
                            android:layout_marginEnd="15dp"
                            android:layout_toRightOf="@id/cv1"
                            android:scaleType="fitXY"
                            android:src="@drawable/experiences_pic" />

                        <TextView
                            android:id="@+id/txt2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/img2"
                            android:layout_marginStart="15dp"
                            android:layout_toRightOf="@id/cv1"
                            android:text="Experiences"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/img3"
                            android:layout_width="135dp"
                            android:layout_height="100dp"
                            android:layout_marginEnd="5dp"
                            android:layout_toRightOf="@id/img2"
                            android:scaleType="fitXY"
                            android:src="@drawable/food_pic" />

                        <TextView
                            android:id="@+id/txt3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/img3"
                            android:layout_toRightOf="@id/img2"
                            android:text="Restaurants"
                            android:textSize="20sp"
                            android:textStyle="bold" />
                    </RelativeLayout>

                </HorizontalScrollView>

            </android.support.v4.widget.NestedScrollView>

            <TextView
                android:id="@+id/text2_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/horizontalScrollView_main"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="10dp"
                android:text="Homes in Northern Pakistan"
                android:textSize="24sp" />

            <FrameLayout
                android:id="@+id/frameLayout_main"
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:layout_below="@id/text2_main">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/homes_recyclerView_main"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </android.support.v7.widget.RecyclerView>

                </LinearLayout>

            </FrameLayout>

        </RelativeLayout>

    </ScrollView>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottomNavView_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:menu="@menu/bottom_navigation_menu" />

</RelativeLayout>