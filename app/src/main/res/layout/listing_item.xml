<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp">

    <ImageView
        android:id="@+id/listingImage"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/scenery_2_wide"
        android:scaleType="fitXY"
        android:contentDescription="@string/contentDescription_listing_image" />
    <TextView
        android:id="@+id/listingTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/listingImage"
        android:layout_marginStart="6dp"
        android:layout_marginTop="4dp"
        android:text="@string/listing_title_placeholder_text"
        android:textSize="22sp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/text_listingRate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/listingTitle"
        android:layout_marginStart="6dp"
        android:layout_marginTop="4dp"
        android:text="@string/listing_Rate_desc_text"
        android:textSize="18sp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/listingRate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/text_listingRate"
        android:layout_alignBaseline="@id/text_listingRate"
        android:layout_marginStart="6dp"
        android:layout_marginTop="4dp"
        android:text="@string/listing_Rate_placeholder_text"
        android:textSize="18sp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/listingLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/listingRate"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="4dp"
        android:text="@string/listing_location_placeholder_text"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/text_listingHostName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/listingLocation"
        android:layout_marginStart="6dp"
        android:layout_marginTop="4dp"
        android:text="@string/listing_HostName_desc_text"
        android:textSize="16sp"/>
    <TextView
        android:id="@+id/listingHostName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/text_listingHostName"
        android:layout_alignBaseline="@id/text_listingHostName"
        android:layout_marginStart="6dp"
        android:layout_marginTop="4dp"
        android:text="@string/listing_HostName_placeholder_text"
        android:textSize="16sp"/>
</RelativeLayout>