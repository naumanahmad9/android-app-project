<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.ProfileFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/profile_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_pic"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/user_pic_default"
                app:civ_border_color="#fff"
                app:civ_border_width="1dp"
                android:layout_centerHorizontal="true"/>

            <ImageView
                android:id="@+id/profile_pic_edit"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_toRightOf="@id/profile_pic"
                android:layout_alignBottom="@id/profile_pic"
                android:src="@drawable/ic_edit_white_24dp"
                />
            <TextView
                android:id="@+id/profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/profile_pic"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:text=""
                android:textColor="#fff"
                android:textSize="28sp"
                />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#fff"
            android:layout_above="@id/profile_email_text"
            />

        <TextView
            android:id="@+id/profile_email_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/profile_header"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginStart="15dp"
            android:text="Email"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/profile_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/profile_email_text"
            android:layout_alignBaseline="@id/profile_email_text"
            android:layout_marginTop="15dp"
            android:layout_marginStart="20dp"
            android:text=""
            android:textSize="20sp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#80CFCFCF"
            android:layout_below="@id/profile_email_text"
            />

        <TextView
            android:id="@+id/profile_becomeHost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/profile_email_text"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginStart="15dp"
            android:text="Become a host"
            android:textSize="20sp"
            android:textStyle="bold"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#80CFCFCF"
            android:layout_below="@id/profile_becomeHost"
            />

        <TextView
            android:id="@+id/goto_aboutus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/profile_becomeHost"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginStart="15dp"
            android:text="Learn more about Lets Home"
            android:textSize="20sp"
            android:textStyle="bold"
            />
        
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/goto_aboutus"
            android:background="#80CFCFCF"
            />

        <TextView
            android:id="@+id/profile_signout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/goto_aboutus"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginStart="15dp"
            android:text="Sign Out"
            android:textSize="20sp"
            android:textStyle="bold"
            />

    </RelativeLayout>


</FrameLayout>