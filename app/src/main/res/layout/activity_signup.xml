<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF7B005C"
    android:id="@+id/signup_container"
    tools:context=".activities.SignupActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foreground="#b47b005c"
        android:scaleType="fitXY"
        android:src="@drawable/scenery_bg_1" />

    <EditText
        android:id="@+id/signup_name"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:backgroundTint="#ffffff"
        android:hint="Name"
        android:imeOptions="actionDone"
        android:inputType="text"
        android:maxLines="1"
        android:padding="12dp"
        android:textColor="#fff"
        android:textColorHint="#fff"
        android:textSize="20sp"
        android:drawableEnd="@drawable/ic_person_white_24dp" />

    <EditText
        android:id="@+id/signup_email"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@+id/signup_name"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:backgroundTint="#ffffff"
        android:hint="Email"
        android:imeOptions="actionDone"
        android:inputType="textEmailAddress"
        android:maxLines="1"
        android:padding="12dp"
        android:textColor="#fff"
        android:textColorHint="#fff"
        android:textSize="20sp"
        android:drawableEnd="@drawable/ic_email_white_24dp"/>

    <EditText
        android:id="@+id/signup_password"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_below="@id/signup_email"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:backgroundTint="#ffffff"
        android:hint="Password"
        android:imeOptions="actionDone"
        android:inputType="textPassword"
        android:maxLines="1"
        android:padding="12dp"
        android:textColor="#fff"
        android:textColorHint="#fff"
        android:textSize="20sp"
        android:drawableEnd="@drawable/ic_key_white"/>

    <android.support.v7.widget.AppCompatCheckBox
        android:id="@+id/signup_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/signup_password"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="25dp"
        android:backgroundTint="#fff" />

    <android.support.v7.widget.AppCompatCheckedTextView
        android:id="@+id/signup_checkbox_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/signup_password"
        android:layout_alignBaseline="@id/signup_checkbox"
        android:layout_toRightOf="@id/signup_checkbox"
        android:text="Agree terms and conditions"
        android:textColor="#fff" />

    <Button
        android:id="@+id/signup_btn"
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:layout_below="@id/signup_checkbox_text"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/rounded_corners"
        android:text="@string/signup_button_text"
        android:textColor="#7b005c"
        android:textStyle="bold"
        android:textSize="20sp" />

</RelativeLayout>