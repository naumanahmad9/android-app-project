<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.hpnotebook.letshome">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo2"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.AboutUsActivity" />
        <activity android:name=".activities.FinalBookingActivity" />
        <activity android:name=".activities.RestaurantsActivity" />
        <activity android:name=".activities.ExperiencesActivity" />
        <activity android:name=".activities.HomesActivity" />
        <activity android:name=".activities.HomeListingDetail" />
        <activity android:name=".activities.LoginActivity" />
        <activity android:name=".activities.SplashScreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity android:name=".activities.MainActivity" />
        <activity android:name=".activities.SelectListingTypeActivity" />
        <activity android:name=".activities.AddHomeActivity" />
        <activity android:name=".activities.AddExperienceActivity" />
        <activity android:name=".activities.AddRestaurantActivity" />
        <activity android:name=".activities.BookingActivity" />

        <service android:name=".FCMservice">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <activity android:name=".activities.RestListingDetail" />
        <activity android:name=".activities.ExprListingDetail" />
        <activity android:name=".activities.OnboardingActivity" />
        <activity android:name=".activities.MessageActivity" />
        <activity android:name=".activities.SignupActivity"></activity>
    </application>

</manifest>